<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- Saudação -->
    <TextView
        android:id="@+id/compact_widget_greeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bom dia"
        android:textColor="@color/widget_text_color_fixed"
        android:textSize="16sp"
        android:textStyle="bold" />

    <!-- Data -->
    <TextView
        android:id="@+id/compact_widget_day_of_week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seg - 26/08"
        android:textColor="@color/widget_text_color_fixed"
        android:textSize="14sp"
        android:textStyle="bold" />

    <!-- Tarefas -->
    <TextView
        android:id="@+id/compact_widget_tasks"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Carregando tarefas..."
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:gravity="start|top" />

    <!-- Botão de refresh -->
    <ImageButton
        android:id="@+id/compact_widget_refresh_button"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="end"
        android:src="@android:drawable/ic_popup_sync"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:contentDescription="Refresh Widget"
        android:padding="4dp" />

</LinearLayout>
