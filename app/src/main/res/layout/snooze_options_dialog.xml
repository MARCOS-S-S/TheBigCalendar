<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/visibility_alert_high_background"
    android:padding="24dp"
    android:gravity="center">

    <!-- Título -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Adiar por quanto tempo?"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

            <!-- Opções de adiamento -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <!-- 5 minutos -->
            <Button
                android:id="@+id/snooze_5min_button"
                android:layout_width="250dp"
                android:layout_height="52dp"
                android:text="⏰ 5 MINUTOS"
                android:textColor="@android:color/white"
                android:background="@drawable/snooze_option_button_background"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"
                android:elevation="6dp"
                android:stateListAnimator="@null" />

            <!-- 30 minutos -->
            <Button
                android:id="@+id/snooze_30min_button"
                android:layout_width="250dp"
                android:layout_height="52dp"
                android:text="⏰ 30 MINUTOS"
                android:textColor="@android:color/white"
                android:background="@drawable/snooze_option_button_background"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"
                android:elevation="6dp"
                android:stateListAnimator="@null" />

            <!-- 1 hora -->
            <Button
                android:id="@+id/snooze_1hour_button"
                android:layout_width="250dp"
                android:layout_height="52dp"
                android:text="⏰ 1 HORA"
                android:textColor="@android:color/white"
                android:background="@drawable/snooze_option_button_background"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="20dp"
                android:elevation="6dp"
                android:stateListAnimator="@null" />

            <!-- Botão Cancelar -->
            <Button
                android:id="@+id/snooze_cancel_button"
                android:layout_width="180dp"
                android:layout_height="48dp"
                android:text="❌ CANCELAR"
                android:textColor="@android:color/white"
                android:background="@drawable/cancel_button_background"
                android:textSize="14sp"
                android:textStyle="bold"
                android:elevation="4dp"
                android:stateListAnimator="@null" />

        </LinearLayout>

</LinearLayout>
